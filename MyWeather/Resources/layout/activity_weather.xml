<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="MyWeather.MyWeather.WeatherActivity"
    tools:ignore="MergeRootFrame"
    android:background="#000000" >

  <LinearLayout
      android:id="@+id/main_content"
      android:orientation="vertical"
    android:layout_width="wrap_content"
       android:layout_gravity ="center"
          android:layout_height="match_parent"
        >
      
    <TextView
      android:layout_marginTop="20dp"
       android:textColor="#99CCFF"
      android:text="city_field"
   android:id="@+id/city_field"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_gravity ="center_horizontal"
       android:gravity="center"
android:textAlignment="gravity"
   android:textSize="20dp"/>

    <TextView
     
        android:text="updated_field"
        android:id="@+id/updated_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_gravity ="center_horizontal"
         android:textSize="14dp" />
<Switch
   android:textColor="#99CCFF"
        android:id="@+id/fahrenheit_switch"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
               android:layout_gravity ="center_horizontal"
   android:checked="false"
   android:text="Fahrenheit ON" />
    <TextView
      
      android:text="w"
        android:id="@+id/weather_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity ="center_horizontal"
         android:textSize="80dp"
     android:textColor="#99CCFF"
        />
    <LinearLayout
   android:id="@+id/temp_container"
     android:orientation="horizontal"
   android:layout_width="wrap_content"
      android:layout_gravity ="center"
         android:layout_height="wrap_content"
        >
      <TextView
        android:textColor="#99CCFF"
         android:text="current"
          android:id="@+id/current_temperature_field"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity ="center_horizontal"
          android:textSize="36dp" />
      <TextView
        android:paddingTop="2dp"
  android:textColor="#99CCFF"
   android:text="o"
        android:id="@+id/current_temperature_field_degree"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity ="center_horizontal"
    android:textSize="14dp" />
      <TextView
    android:textColor="#99CCFF"
     android:text="C"
    android:id="@+id/current_temperature_field_celcius"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity ="center_horizontal"
      android:textSize="28dp" />
    </LinearLayout>
    <TextView
      android:textColor="#99CCFF"
       android:text="description_field"
        android:id="@+id/description_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity ="center_horizontal"
        android:textSize="16dp"
        />
    <TextView
      android:textColor="#99CCFF"
   android:text="humidity_field"
    android:id="@+id/humidity_field"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity ="center_horizontal"
    android:textSize="16dp"/>
    <TextView
      android:textColor="#99CCFF"
       android:text="pressure_field"
        android:id="@+id/pressure_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity ="center_horizontal"
        android:textSize="16dp"
        />
    <TextView
  android:textColor="#99CCFF"
   android:text="wind_field"
    android:id="@+id/wind_field"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity ="center_horizontal"
    android:textSize="16dp"
        />
    <LinearLayout
 android:orientation="horizontal"
   android:layout_width="wrap_content"
  android:layout_gravity ="center"
     android:layout_height="wrap_content"
        >
      <TextView
        android:textColor="#99CCFF"
     android:text="sunrise_field"
      android:id="@+id/sunrise_field"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity ="center_horizontal"
      android:textSize="16dp"/>
      <TextView
        android:paddingLeft="3dp"
      android:textColor="#99CCFF"
       android:text="sunset_field"
        android:id="@+id/sunset_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity ="center_horizontal"
        android:textSize="16dp"
        />
    </LinearLayout>
    <LinearLayout
      android:padding="3dp"
              android:background="#ffffff"
       android:layout_marginTop="14dp"

          android:orientation="horizontal"
        android:layout_width="wrap_content"
           android:layout_gravity ="center"
              android:layout_height="wrap_content"
        >
      <FrameLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          >
        <LinearLayout
         android:onClick="city1_onClick"
          android:id="@+id/citi1_layout"
          android:clickable="true"
    android:background="#000000"
      android:orientation="vertical"
    android:layout_width="60dp"
       android:layout_gravity ="center"
          android:layout_height="wrap_content"
        >
          <TextView
    android:text="w"
      android:id="@+id/weather_icon1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity ="center_horizontal"
       android:textSize="24dp"
   android:textColor="#99CCFF"
        />
          <LinearLayout
    android:orientation="horizontal"
  android:layout_width="wrap_content"
     android:layout_gravity ="center"
        android:layout_height="wrap_content"
        >
            <TextView
    android:textColor="#99CCFF"
   android:text="temp_field"
        android:id="@+id/temp_field1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity ="center_horizontal"
    android:gravity="center"
     android:textAlignment="gravity"
        android:textSize="10dp"/>
            <TextView
  android:textColor="#99CCFF"
 android:text="o"
      android:id="@+id/temp_field1_degree"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity ="center_horizontal"
  android:gravity="center"
   android:textAlignment="gravity"
      android:textSize="6dp"/>
            <TextView
  android:textColor="#99CCFF"
 android:text="C"
   android:id="@+id/temp_field1_celcius"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_gravity ="center_horizontal"
  android:gravity="center"
android:textAlignment="gravity"
   android:textSize="8dp"/>
          </LinearLayout>
          <TextView
              android:paddingLeft="2dp"
              android:paddingRight="2dp"
              android:textColor="#99CCFF"
              android:text="city_field"
              android:id="@+id/city_field1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity ="center_horizontal"
              android:gravity="center"
              android:textAlignment="gravity"
              android:maxLength="8"
              android:ellipsize="end"
              android:maxLines="1"
              android:textSize="14dp"/>

        </LinearLayout>
        <ProgressBar
           android:id="@+id/city1_content_buzy"
     android:layout_width="20dp"
    android:layout_height="20dp"
      android:gravity="center"
       android:layout_gravity ="center"
    android:indeterminate="true" />
      </FrameLayout>
      <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          >
        <LinearLayout
         android:onClick="city2_onClick"
          android:id="@+id/citi2_layout"
          android:clickable="true"
            android:layout_marginLeft="2dp"
     android:background="#000000"
      android:orientation="vertical"
    android:layout_width="60dp"
       android:layout_gravity ="center"
          android:layout_height="wrap_content"
        >
          <TextView

    android:text="w"
      android:id="@+id/weather_icon2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity ="center_horizontal"
       android:textSize="24dp"
   android:textColor="#99CCFF"
        />
          <LinearLayout
  android:orientation="horizontal"
android:layout_width="wrap_content"
   android:layout_gravity ="center"
      android:layout_height="wrap_content"
        >
            <TextView
    android:textColor="#99CCFF"
   android:text="temp_field"
        android:id="@+id/temp_field2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity ="center_horizontal"
    android:gravity="center"
     android:textAlignment="gravity"
        android:textSize="10dp"/>
            <TextView
  android:textColor="#99CCFF"
 android:text="o"
      android:id="@+id/temp_field2_degree"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity ="center_horizontal"
  android:gravity="center"
   android:textAlignment="gravity"
      android:textSize="6dp"/>
            <TextView
  android:textColor="#99CCFF"
 android:text="C"
   android:id="@+id/temp_field2_celcius"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_gravity ="center_horizontal"
  android:gravity="center"
android:textAlignment="gravity"
   android:textSize="8dp"/>
          </LinearLayout>

          <TextView
              android:paddingLeft="2dp"
              android:paddingRight="2dp"
              android:textColor="#99CCFF"
              android:text="city_field"
              android:id="@+id/city_field2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity ="center_horizontal"
              android:gravity="center"
              android:textAlignment="gravity"
			        android:maxLength="8"
              android:ellipsize="end"
              android:maxLines="1"
			        android:textSize="14dp"
            />

        </LinearLayout>
        <ProgressBar
           android:id="@+id/city2_content_buzy"
     android:layout_width="20dp"
    android:layout_height="20dp"
      android:gravity="center"
       android:layout_gravity ="center"
    android:indeterminate="true" />
      </FrameLayout>

      <FrameLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
          >
        <LinearLayout
         android:onClick="city3_onClick"
          android:id="@+id/citi3_layout"
          android:clickable="true"
   android:layout_marginLeft="2dp"
    android:background="#000000"
      android:orientation="vertical"
    android:layout_width="60dp"
       android:layout_gravity ="center"
          android:layout_height="wrap_content"
        >
          <TextView

    android:text="w"
      android:id="@+id/weather_icon3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity ="center_horizontal"
       android:textSize="24dp"
   android:textColor="#99CCFF"
        />
          <LinearLayout
  android:orientation="horizontal"
android:layout_width="wrap_content"
   android:layout_gravity ="center"
      android:layout_height="wrap_content"
        >
            <TextView
  android:textColor="#99CCFF"
 android:text="temp_field"
      android:id="@+id/temp_field3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity ="center_horizontal"
  android:gravity="center"
   android:textAlignment="gravity"
      android:textSize="10dp"/>
            <TextView
  android:textColor="#99CCFF"
 android:text="o"
      android:id="@+id/temp_field3_degree"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity ="center_horizontal"
  android:gravity="center"
   android:textAlignment="gravity"
      android:textSize="6dp"/>
            <TextView
  android:textColor="#99CCFF"
 android:text="C"
   android:id="@+id/temp_field3_celcius"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_gravity ="center_horizontal"
  android:gravity="center"
android:textAlignment="gravity"
   android:textSize="8dp"/>
          </LinearLayout>

          <TextView
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
             android:textColor="#99CCFF"
            android:text="city_field"
         android:id="@+id/city_field3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity ="center_horizontal"
             android:gravity="center"
      android:textAlignment="gravity"
			  android:maxLength="8"
              android:ellipsize="end"
              android:maxLines="1"
			  android:textSize="14dp"
            />

        </LinearLayout>
        <ProgressBar
           android:id="@+id/city3_content_buzy"
     android:layout_width="20dp"
    android:layout_height="20dp"
      android:gravity="center"
       android:layout_gravity ="center"
    android:indeterminate="true" />
      </FrameLayout>

      <FrameLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
          >
        <LinearLayout
         android:onClick="city4_onClick"
          android:id="@+id/citi4_layout"
          android:clickable="true"
   android:layout_marginLeft="2dp"
    android:background="#000000"
      android:orientation="vertical"
    android:layout_width="60dp"
       android:layout_gravity ="center"
          android:layout_height="wrap_content"
        >
          <TextView

    android:text="w"
      android:id="@+id/weather_icon4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity ="center_horizontal"
       android:textSize="24dp"
   android:textColor="#99CCFF"
        />

          <LinearLayout
  android:orientation="horizontal"
android:layout_width="wrap_content"
   android:layout_gravity ="center"
      android:layout_height="wrap_content"
        >
            <TextView
  android:textColor="#99CCFF"
 android:text="temp_field"
      android:id="@+id/temp_field4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity ="center_horizontal"
  android:gravity="center"
   android:textAlignment="gravity"
      android:textSize="10dp"/>
            <TextView
  android:textColor="#99CCFF"
 android:text="o"
      android:id="@+id/temp_field4_degree"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity ="center_horizontal"
  android:gravity="center"
   android:textAlignment="gravity"
      android:textSize="6dp"/>
            <TextView
  android:textColor="#99CCFF"
 android:text="C"
   android:id="@+id/temp_field4_celcius"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_gravity ="center_horizontal"
  android:gravity="center"
android:textAlignment="gravity"
   android:textSize="8dp"/>
          </LinearLayout>
          <TextView
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
             android:textColor="#99CCFF"
            android:text="city_field"
         android:id="@+id/city_field4"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity ="center_horizontal"
             android:gravity="center"
      android:textAlignment="gravity"
			  android:maxLength="8"
              android:ellipsize="end"
              android:maxLines="1"
			  android:textSize="14dp"
            />

        </LinearLayout>
        <ProgressBar
           android:id="@+id/city4_content_buzy"
     android:layout_width="20dp"
    android:layout_height="20dp"
      android:gravity="center"
       android:layout_gravity ="center"
    android:indeterminate="true" />
      </FrameLayout>

    </LinearLayout>
    <LinearLayout
            android:background="#212121"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity ="center"
            android:layout_height="wrap_content"
        >
      <com.google.android.gms.ads.AdView
               xmlns:ads="http://schemas.android.com/apk/res-auto"
               android:id="@+id/adView"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               ads:adSize="BANNER"
               ads:adUnitId="ca-app-pub-3940256099942544/6300978111"/>
    </LinearLayout>
  </LinearLayout>
  <LinearLayout
     android:id="@+id/main_content_buzy"
      android:orientation="horizontal"
    android:layout_width="wrap_content"
       android:layout_gravity ="center"
          android:layout_height="wrap_content"
        >
    <ProgressBar
 android:layout_width="wrap_content"
android:layout_height="wrap_content"
  android:gravity="center"
   android:layout_gravity ="center"
android:indeterminate="true" />

  </LinearLayout>

</FrameLayout>
